<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gambar"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/regisemail"
        android:layout_width="326dp"
        android:layout_height="48dp"
        android:background="@drawable/tmbl2"
        android:hint="email"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="150dp" />

    <EditText
        android:id="@+id/regissandi"
        android:layout_width="326dp"
        android:layout_height="48dp"
        android:background="@drawable/tmbl2"
        android:hint="sandi"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="251dp" />

    <EditText
        android:id="@+id/regiskonsandi"
        android:layout_width="326dp"
        android:layout_height="48dp"
        android:background="@drawable/tmbl2"
        android:hint="konfirmasi sandi"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="341dp" />

    <Button
        android:id="@+id/daftar"
        android:layout_width="124dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/tmbl0"
        android:text="Daftar"
        android:textStyle="bold"
        app:backgroundTint="@color/teal_200"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="435dp" />


</androidx.constraintlayout.widget.ConstraintLayout>